<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/background">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/routes" android:textColor="@color/colorYellow" android:textSize="24sp"
              android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:fontFamily="@font/amiko_bold"
              android:id="@+id/textView"
              android:textAlignment="center" app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="68dp" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="92dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/camping" android:textColor="@color/colorYellow" android:textSize="24sp"
              android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:fontFamily="@font/amiko_bold"
              android:textAlignment="center"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="76dp"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="48dp" android:id="@+id/textView3"
              android:layout_marginStart="24dp" app:layout_constraintStart_toEndOf="@+id/textView"
              app:layout_constraintHorizontal_bias="0.799"/>
    <TextView android:layout_width="172dp" android:layout_height="49dp"
              android:text="@string/attractions" android:textColor="@color/colorSunset" android:textSize="24sp"
              android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:fontFamily="@font/amiko_bold"
              android:id="@+id/textView2" android:textAlignment="center"
              app:layout_constraintStart_toStartOf="@+id/textView"
              app:layout_constraintEnd_toEndOf="@+id/textView3"
              app:layout_constraintHorizontal_bias="0.543" app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="50dp"
              app:layout_constraintVertical_bias="0.682"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/go"
            android:fontFamily="@font/amiko_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintVertical_bias="0.924"/>

</androidx.constraintlayout.widget.ConstraintLayout>